<div class="container m-5 ">

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.img_url %>)">
    <h1><%= @list.name %></h1>
  </div>

  <ul class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <li class="movie-card ">
          <img  src="<%= bookmark.movie.poster_url %>" alt="movie poster" >
          <div class="movie-info">
              <div class="d-flex align-items-center">
                <div class=""><h5><%= bookmark.movie.title %></h5></div>
                <div class=""><p id="rating"> &nbsp - <%= bookmark.movie.rating %> ⭐️</p></div>
              </div>
              <p><%= bookmark.movie.overview %></p>
              <p class="movie-comment"><i class="fa-solid fa-quote-left"></i></i><%= bookmark.comment %></p>

              <%= link_to  "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{bookmark.movie.title} from your #{@list.name} list"}, :class=>"btn btn-outline-danger" %>


          </div>
          </li>
      <% end %>

  </ul>


  <%= link_to  "Add a movie", new_list_bookmark_path(@list), :class=>"btn btn-success mt-5" %>

</div>
